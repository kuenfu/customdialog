<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/fui_bgGoogle"

        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout2"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/search_layout"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
                android:layout_width="wrap_content"
                android:text="性別："
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/backGroundAAA"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                android:id="@+id/textView9"
                />


        <RadioGroup
                android:id="@+id/main_productSexGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView9"
                >
            <RadioButton
                    android:id="@+id/main_Sex00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/btn_rounded_line_green"
                    android:button="@android:color/transparent"
                    android:text="不分"
                    android:textAlignment="center"
                    android:textSize="24dp"/>
            <RadioButton
                    android:id="@+id/main_Sex01"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/btn_rounded_line_green"
                    android:button="@android:color/transparent"
                    android:text="女"
                    android:textAlignment="center"
                    android:textSize="24dp"/>

            <RadioButton
                    android:id="@+id/main_Sex02"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/btn_rounded_line_green"
                    android:button="@android:color/transparent"
                    android:text="男"
                    android:textAlignment="center"
                    android:textSize="24dp"/>


        </RadioGroup>


        <TextView
                android:layout_width="wrap_content"
                android:text="類型："
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/backGroundAAA"
                android:id="@+id/textView10"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:layout_marginStart="0dp"
                app:layout_constraintStart_toStartOf="@+id/textView9"/>


        <RadioGroup
                android:id="@+id/main_productSauceGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                android:layout_marginStart="8dp">

            <RadioButton
                    android:id="@+id/main_sauce00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/btn_rounded_line_green"
                    android:button="@android:color/transparent"
                    android:text="不分"
                    android:textAlignment="center"
                    android:textSize="24dp"/>

            <RadioButton
                    android:id="@+id/main_sauce01"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/btn_rounded_line_green"
                    android:button="@android:color/transparent"
                    android:text="A"
                    android:textAlignment="center"
                    android:textSize="24dp"/>

            <RadioButton
                    android:id="@+id/main_sauce02"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/btn_rounded_line_green"
                    android:button="@android:color/transparent"
                    android:text="B"
                    android:textAlignment="center"
                    android:textSize="24dp"/>

            <RadioButton
                    android:id="@+id/main_sauce03"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/btn_rounded_line_green"
                    android:button="@android:color/transparent"
                    android:text="C"
                    android:textAlignment="center"
                    android:textSize="24dp"/>


        </RadioGroup>

        <Button
                android:id="@+id/btn_main_resetandsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:background="@drawable/btn_rounded_line_green"
                android:button="@android:color/transparent"
                android:text="重設並搜尋"
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"/>


        <Button
                android:id="@+id/btn_main_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:background="@drawable/btn_rounded_line_green"
                android:button="@android:color/transparent"
                android:text="搜尋"
                android:padding="2dp"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="@+id/btn_main_resetandsearch"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_main_resetandsearch"
                android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aguafina_script"
            android:gravity="center"
            android:text="JoMeiz"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:id="@+id/textView5"/>

    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/persononline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/search_layout"/>

    <TextView
            android:id="@+id/tv_onlinecount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/colorWhiteAF"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"/>

    <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/customstring_search2"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_search_black_24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnTaxi"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp"/>

    <ImageButton
            android:id="@+id/btnTaxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/setting1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_car"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMember"/>

    <ImageButton
            android:id="@+id/btnMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/setting1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_person"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainrecyclerView"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/search_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            android:paddingBottom="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>