<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/list_recycleview_id"
                                                   android:background="@color/fui_bgGoogle"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/list_img"/>

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:gravity="left|center_horizontal"

            app:layout_constraintTop_toBottomOf="@+id/list_img"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/imgbtn_sex"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/icon_woman"
            app:layout_constraintTop_toBottomOf="@+id/list_img"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_list_onlinetype"
            android:layout_marginEnd="0dp"/>


    <TextView
            android:id="@+id/tv_list_onlinetype"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imgbtn_onlinestatue"
            app:layout_constraintTop_toBottomOf="@+id/list_img"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/imgbtn_onlinestatue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/personoffline"
            app:layout_constraintEnd_toStartOf="@+id/imgbtn_star"
            app:layout_constraintTop_toBottomOf="@+id/list_img"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:id="@+id/imgbtn_star"

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_on_line"
            android:adjustViewBounds="true"
            android:background="@color/fui_bgGoogle"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/list_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

